<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="90"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Employee"></TextView>

        <Spinner
            android:id="@+id/EmployeeSpinner"
            android:layout_weight="45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Spinner>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/SelectPeriodLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="90"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Select Your Period"></TextView>

        <Spinner
            android:id="@+id/TimePeriodSpinner"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Spinner>

        <ImageButton
            android:id="@+id/SearchButton"
            android:layout_width="wrap_content"
            android:src="@drawable/viewicon"
            android:tint="@color/black"
            android:layout_height="wrap_content">

        </ImageButton>

    </LinearLayout>
    <LinearLayout
        android:padding="2dp"
        android:id="@+id/CustomLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="80"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From :"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:id="@+id/SelectCustomFromDate"
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Custom From Date"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To :"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:id="@+id/SelectCustomToDate"
            android:textColor="@color/black"
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Custom To Date"
            ></TextView>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Want to Search Anything?"
        android:drawableLeft="@drawable/search"
        android:id="@+id/Search">

    </EditText>
        <ListView
            android:padding="2dp"
            android:id="@+id/ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>



</LinearLayout>